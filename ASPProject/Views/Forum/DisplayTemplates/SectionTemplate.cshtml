@using System.Security.Claims
@model ASPProject.Models.Forum.Index.ForumSectionViewModel

<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-2">
            <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-10">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text"><small class="text-muted">Створено: @Model.CreateDt</small></p>
            </div>
            <div class="card-footer">
                Автор: 
                @{
                    String avatar = Model.Author.Avatar;

                    if (avatar == "")
                    {
                        avatar = "no-photo.png";
                    }
                }
                <img src="/avatars/@avatar" alt="Avatar" class="rounded-circle f-40 mx-3">
                <span title="@Model.Author.Email">@Model.Author.Name</span>
            </div>
        </div>
    </div>
</div>